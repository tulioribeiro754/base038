/* ================================
   BASE038 — CSS GLOBAL (FINAL)
   ================================ */

/* RESET */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* VARIÁVEIS */
:root {
    --preto: #0b0b0b;
    --cinza: #161616;
    --cinza-leve: #222;
    --azul: #00aaff;
    --branco: #f5f5f5;
    --fonte: 'Inter', Arial, sans-serif;
}

/* BASE */
html, body {
    width: 100%;
    min-height: 100%;
}

body {
    font-family: var(--fonte);
    background: var(--preto);
    color: var(--branco);
    line-height: 1.6;
}

/* LINKS */
a {
    color: inherit;
    text-decoration: none;
}

/* HEADER */
.header {
    width: 100%;
    background: #000;
    padding: 20px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--cinza-leve);
}

.logo {
    font-size: 1.4rem;
    font-weight: 900;
    letter-spacing: 3px;
}

/* NAV */
.nav a {
    margin-left: 25px;
    font-weight: 500;
    transition: color 0.3s;
}

.nav a:hover {
    color: var(--azul);
}

/* BOTÃO */
.btn-neon {
    background: var(--azul);
    color: #000;
    padding: 10px 22px;
    border-radius: 6px;
    font-weight: 600;
    transition: transform 0.2s, box-shadow 0.2s;
}

.btn-neon:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 12px var(--azul);
}

/* CONTAINER */
.container {
    max-width: 1200px;
    margin: auto;
    padding: 60px 20px;
}

/* TÍTULOS */
h1, h2, h3 {
    font-weight: 800;
    letter-spacing: 1px;
    margin-bottom: 20px;
}

/* GRID DE PRODUTOS */
.grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 30px;
}

/* CARD PRODUTO */
.card {
    background: var(--cinza);
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
}

.card:hover {
    transform: translateY(-6px);
    box-shadow: 0 0 20px rgba(0, 170, 255, 0.3);
}

.card img {
    width: 100%;
    height: 320px;
    object-fit: cover;
}

.card-content {
    padding: 15px;
}

.card-content p {
    margin-bottom: 10px;
}

.card-content span {
    font-weight: bold;
}

/* CARRINHO / CHECKOUT */
.checkout,
.carrinho {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 40px;
}

.item-resumo,
.item-carrinho {
    display: flex;
    align-items: center;
    gap: 15px;
    background: var(--cinza);
    padding: 12px;
    border-radius: 8px;
    margin-bottom: 12px;
}

.item-resumo img,
.item-carrinho img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 6px;
}

.total {
    margin-top: 20px;
    font-size: 1.2rem;
}

/* FORMULÁRIOS */
input, select {
    width: 100%;
    padding: 12px;
    margin-bottom: 15px;
    background: var(--cinza);
    border: 1px solid var(--cinza-leve);
    border-radius: 6px;
    color: var(--branco);
}

input:focus, select:focus {
    outline: none;
    border-color: var(--azul);
}

/* ADMIN */
.admin {
    display: grid;
    gap: 40px;
}

.admin-card {
    background: var(--cinza);
    padding: 25px;
    border-radius: 10px;
}

.produto-admin {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: 15px;
    align-items: center;
    margin-bottom: 15px;
}

.produto-admin img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 6px;
}

.produto-admin button {
    background: red;
    color: white;
    border: none;
    padding: 6px 12px;
    border-radius: 4px;
}

/* FOOTER */
.footer {
    background: #000;
    padding: 20px;
    text-align: center;
    border-top: 1px solid var(--cinza-leve);
}

/* RESPONSIVO */
@media (max-width: 900px) {
    .checkout,
    .carrinho {
        grid-template-columns: 1fr;
    }

    .header {
        flex-direction: column;
        gap: 15px;
    }
}
